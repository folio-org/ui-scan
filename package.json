{
  "name": "@folio/scan",
  "version": "1.2.0",
  "description": "Item Check-in/Check-out",
  "repository": "folio-org/ui-scan",
  "publishConfig": {
    "registry": "https://repository.folio.org/repository/npm-folio/"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.0.0"
  },
  "main": "index.js",
  "stripes": {
    "type": "app",
    "displayName": "Circulation",
    "route": "/scan",
    "hasSettings": true,
    "okapiInterfaces": {
      "circulation": "2.2",
      "configuration": "2.0",
      "item-storage": "3.0",
      "loan-policy-storage": "1.0",
      "users": "14.0"
    },
    "permissionSets": [
      {
        "permissionName": "module.scan.enabled",
        "displayName": "UI: Scan module is enabled"
      },
      {
        "permissionName": "circulation.all",
        "displayName": "Circulation: All permissions",
        "description": "Entire set of permissions needed to use the circulation",
        "visible": true,
        "subPermissions": [
          "circulation.loans.collection.get",
          "circulation.loans.item.get",
          "circulation.loans.item.post",
          "circulation.loans.item.put",
          "circulation.loans.item.delete",
          "circulation.loans.collection.delete",
          "module.scan.enabled",
          "circulation-storage.all",
          "configuration.all",
          "inventory-storage.items.item.get",
          "inventory-storage.items.item.put",
          "users.collection.get"
        ]
      },
      {
        "permissionName": "settings.loan-policies.all",
        "displayName": "Settings (Circ): Can create, edit and remove loan policies",
        "subPermissions": [
          "circulation-storage.loan-policies.collection.get",
          "circulation-storage.loan-policies.item.get",
          "circulation-storage.loan-policies.item.post",
          "circulation-storage.loan-policies.item.put",
          "circulation-storage.loan-policies.item.delete",
          "circulation-storage.loan-policies.collection.delete",
          "settings.enabled"
        ],
        "visible": false
      }
    ]
  },
  "scripts": {
    "lint": "eslint *.js || true"
  },
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "eslint": "^3.8.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1"
  },
  "dependencies": {
    "@folio/plugin-find-user": "1.0.0",
    "@folio/stripes-components": "^1.4.0",
    "dateformat": "^2.0.0",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.4",
    "query-string": "^5.0.0",
    "react": "^15.4.2",
    "react-bootstrap": "^0.31.1",
    "react-router-dom": "^4.0.0",
    "redux-form": "^7.0.3",
    "uuid": "^3.0.1"
  },
  "peerDependencies": {
    "@folio/stripes-connect": "^2.2.1",
    "@folio/stripes-core": "^2.1.0"
  }
}
